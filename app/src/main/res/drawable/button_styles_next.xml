<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
            >
            <stroke
                android:width="0dp"
                />

            <gradient
                android:endColor="#e51b1b"
                android:centerColor="#bc2020"
                android:startColor="#a02020"
                android:angle="135"

                />



            <padding
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp" />


        </shape>
    </item>

    <item android:drawable="@drawable/next"

        />
</layer-list>